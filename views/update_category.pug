extends layout 
 
block content 

    br
    a(href="/") Return Home
    br
    a(href=return_url) Return to #{category_name} Page.


    form(method='POST' action='')
        div.form-group
            label(for='name') Category Name:
                input#name.form-control(type='text', name='name' value = persistant_data ? persistant_data.name : category_name)
            
        div.form-group
            label(for='description') Category Description: 
                input#description.form-control(type='textarea', name='description' value = persistant_data ? persistant_data.description : category_description)
            
        div.form-group
            button.btn.btn-primary(type='submit') Submit 

    if errors 
        ul 
            for error in errors 
                li!=error.msg