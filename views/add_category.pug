extends layout 
 
block content 
    a(href="/") Return Home
    h1 Create a new category!

    form(method='POST' action='')
        div.form-group
            label(for='name') Category Name:
                input#name.form-control(type='text', name='name' value=(undefined===genre ? '' : genre.name))
            
        div.form-group
            label(for='description') Category Description: 
                input#description.form-control(type='textarea', name='description' value='')
            
        div.form-group
            button.btn.btn-primary(type='submit') Submit

    if errors 
        ul 
            for error in errors 
                li!=error.msg
    else 
        p no errors