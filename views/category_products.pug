extends layout 
 
block content 
    a(href="/") Return Home
    br
    a(href= id + "/add") Add new product
    br
    
    h1=title


    table(class="products-table" style='width:80%')
        tr(class="products-table-fields")

            th Product Name
            th Product Stock 
            th Unit Price (USD)
        
        each product in products

            tr
                td=product.name
                td=product.inventory
                td="$" + product.price 
